@model Fatura.Models.Inventario.Inventario

@{
    ViewData["Title"] = "Editar Producto";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar Producto</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body class="bg-light">

    <div class="container py-4">

        <!-- HEADER -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h3 class="fw-bold text-primary">
                    <i class="fas fa-edit"></i> Editar Producto
                </h3>
            </div>
        </div>

        <!-- FORMULARIO -->
        <div class="card shadow-sm">
            <div class="card-body">

                <!-- 🔴 IMPORTANTE -->
                <form asp-action="Edit" method="post">

                    <!-- ID OCULTO -->
                    <input type="hidden" asp-for="IdProducto" />

                    <div class="row g-3">

                        <!-- NOMBRE -->
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- CATEGORÍA -->
                        <div class="col-md-6">
                            <label asp-for="Categoria" class="form-label"></label>
                            <input asp-for="Categoria" class="form-control" />
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <!-- STOCK -->
                        <div class="col-md-4">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" type="number" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                    </div>

                    <hr />

                    <!-- BOTONES -->
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancelar
                        </a>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Actualizar
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
