    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        // Actualizar contador del carrito al cargar la p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            // Asegurar que el overlay est√© oculto al cargar
            const overlay = document.getElementById('floatingMenuOverlay');
            if (overlay) {
                overlay.classList.remove('show');
                overlay.style.display = 'none';
            }
            
            // Asegurar que el contenido sea visible
            document.body.style.display = 'block';
            document.body.style.visibility = 'visible';
            document.body.style.opacity = '1';
            
            updateCartBadge();
            initMobileMenu();
        });

        function updateCartBadge() {
            fetch('@Url.Action("GetCartCount", "Cart")')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('cartBadge');
                    const floatingBadge = document.getElementById('floatingCartBadge');
                    
                    if (badge) {
                        if (data.count > 0) {
                            badge.textContent = data.count;
                            badge.style.display = 'inline-block';
                        } else {
                            badge.style.display = 'none';
                        }
                    }
                    
                    if (floatingBadge) {
                        if (data.count > 0) {
                            floatingBadge.textContent = data.count;
                            floatingBadge.style.display = 'flex';
                        } else {
                            floatingBadge.style.display = 'none';
                        }
                    }
                })
                .catch(error => console.error('Error al obtener contador del carrito:', error));
        }

        // Funci√≥n global para actualizar el badge desde otras p√°ginas
        window.updateCartCount = function(count) {
            const badge = document.getElementById('cartBadge');
            const floatingBadge = document.getElementById('floatingCartBadge');
            
            if (badge) {
                if (count > 0) {
                    badge.textContent = count;
                    badge.style.display = 'inline-block';
                } else {
                    badge.style.display = 'none';
                }
            }
            
            if (floatingBadge) {
                if (count > 0) {
                    floatingBadge.textContent = count;
                    floatingBadge.style.display = 'flex';
                } else {
                    floatingBadge.style.display = 'none';
                }
            }
        };

        // Controlar men√∫ flotante y prevenir men√∫ Bootstrap
        function initMobileMenu() {
            // Prevenir que el men√∫ de Bootstrap se abra en m√≥viles
            if (window.innerWidth <= 991) {
                const navbarToggler = document.querySelector('.navbar-toggler');
                const navbarCollapse = document.getElementById('mainMenu');
                
                if (navbarToggler) {
                    navbarToggler.style.display = 'none';
                    navbarToggler.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        return false;
                    });
                }
                
                if (navbarCollapse) {
                    navbarCollapse.classList.remove('show');
                    navbarCollapse.style.display = 'none';
                }
                
                // Prevenir eventos de Bootstrap Collapse
                const collapseInstances = bootstrap.Collapse.getInstance(navbarCollapse);
                if (collapseInstances) {
                    collapseInstances.dispose();
                }
            }
            
            const floatingMenuBtn = document.getElementById('floatingMenuBtn');
            const floatingMenuPanel = document.getElementById('floatingMenuPanel');
            const floatingMenuOverlay = document.getElementById('floatingMenuOverlay');
            const floatingMenuClose = document.getElementById('floatingMenuClose');
            const floatingMenuIcon = document.getElementById('floatingMenuIcon');
            const floatingMenuItems = document.querySelectorAll('.floating-menu-item, .floating-cart-link');
            
            function openMenu() {
                if (floatingMenuPanel) floatingMenuPanel.classList.add('show');
                if (floatingMenuOverlay) floatingMenuOverlay.classList.add('show');
                if (floatingMenuBtn) floatingMenuBtn.classList.add('active');
                if (floatingMenuIcon) floatingMenuIcon.className = 'fas fa-times';
                document.body.classList.add('menu-open');
                document.body.style.overflow = 'hidden';
                
                // Asegurar que el men√∫ de Bootstrap est√© cerrado
                const navbarCollapse = document.getElementById('mainMenu');
                if (navbarCollapse) {
                    navbarCollapse.classList.remove('show');
                    navbarCollapse.style.display = 'none';
                }
            }
            
            function closeMenu() {
                if (floatingMenuPanel) floatingMenuPanel.classList.remove('show');
                if (floatingMenuOverlay) floatingMenuOverlay.classList.remove('show');
                if (floatingMenuBtn) floatingMenuBtn.classList.remove('active');
                if (floatingMenuIcon) floatingMenuIcon.className = 'fas fa-bars';
                document.body.classList.remove('menu-open');
                document.body.style.overflow = '';
            }
            
            // Abrir men√∫
            if (floatingMenuBtn) {
                floatingMenuBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    if (floatingMenuPanel && floatingMenuPanel.classList.contains('show')) {
                        closeMenu();
                    } else {
                        openMenu();
                    }
                });
            }
            
            // Cerrar men√∫
            if (floatingMenuClose) {
                floatingMenuClose.addEventListener('click', function(e) {
                    e.preventDefault();
                    closeMenu();
                });
            }
            
            // Cerrar al hacer clic en overlay
            if (floatingMenuOverlay) {
                floatingMenuOverlay.addEventListener('click', function(e) {
                    e.preventDefault();
                    closeMenu();
                });
            }
            
            // Cerrar al hacer clic en un enlace
            floatingMenuItems.forEach(item => {
                item.addEventListener('click', function() {
                    setTimeout(closeMenu, 300);
                });
            });
            
            // Actualizar badge del carrito flotante
            const cartBadge = document.getElementById('cartBadge');
            const floatingCartBadge = document.getElementById('floatingCartBadge');
            if (cartBadge && floatingCartBadge) {
                const observer = new MutationObserver(function() {
                    if (cartBadge.style.display !== 'none' && cartBadge.textContent) {
                        floatingCartBadge.textContent = cartBadge.textContent;
                        floatingCartBadge.style.display = 'flex';
                    } else {
                        floatingCartBadge.style.display = 'none';
                    }
                });
                observer.observe(cartBadge, { attributes: true, childList: true, attributeFilter: ['style'] });
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
