<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Motos & Repuestos</title>

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FUENTES -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet" />

    <!-- ICONOS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- TU CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/fonts.css" rel="stylesheet" />

    <!-- 🔴 FIX ESPACIOS -->
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .navbar {
            padding-top: 0;
            padding-bottom: 0;
            min-height: 64px;
        }

        .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            height: 64px;
        }
    </style>
</head>

<body class="bg-light d-flex flex-column min-vh-100">

    <!-- ======= NAVBAR ======= -->
    <!-- 🔴 QUITAMOS shadow si quieres más limpio -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid px-4">

            <a class="navbar-brand fw-bold d-flex align-items-center"
               asp-controller="Home" asp-action="Index">
                🏍️ Motos Rodriguez
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainMenu">
                <ul class="navbar-nav align-items-center">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Factura</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inventario" asp-action="Index">Inventario</a>
                    </li>

                    <!-- BUSCADOR -->
                    <li class="nav-item ms-3">
                        <form class="d-flex align-items-center" method="get"
                              asp-controller="Customer" asp-action="Index">
                            <input class="form-control form-control-sm"
                                   type="search" name="search" placeholder="Buscar">
                            <button class="btn btn-outline-light btn-sm ms-1" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </li>

                    <!-- CARRITO -->
                    <li class="nav-item ms-3">
                        <a class="nav-link text-warning" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- ======= CONTENIDO ======= -->
    <main class="container my-4 flex-fill">
        @RenderBody()
    </main>

    <!-- ======= FOOTER ======= -->
    <footer class="mt-auto">

        <div class="bg-warning py-3">
            <div class="container">
                <div class="row text-center gy-2">
                    <div class="col-md-4">
                        <i class="fas fa-map-marker-alt"></i> Lourdes Colón
                    </div>
                    <div class="col-md-4">
                        <i class="fab fa-whatsapp"></i> +503 5226-3652
                    </div>
                    <div class="col-md-4">
                        <i class="fas fa-envelope"></i> tallerrodriguez0@gmail.com
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-dark text-center py-3">
            <a href="#" class="text-white mx-3 fs-4"><i class="fab fa-facebook"></i></a>
            <a href="#" class="text-white mx-3 fs-4"><i class="fab fa-instagram"></i></a>
            <a href="#" class="text-white mx-3 fs-4"><i class="fab fa-tiktok"></i></a>
        </div>

        <div class="bg-secondary text-white text-center py-2">
            &copy; Taller de Motos Rodriguez
        </div>

    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
