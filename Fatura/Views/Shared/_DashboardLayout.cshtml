<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=yes" />
    <title>@ViewData["Title"] - Factura Rodriguez</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile-tablet.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <style>
        .navbar {
            padding-top: 0;
            padding-bottom: 0;
            min-height: 64px;
        }
        .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            height: 64px;
        }
        .navbar-brand {
            color: #C0C0C0 !important;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .navbar-logo {
            height: 50px;
            width: auto;
            object-fit: contain;
        }
        .dashboard-container {
            padding-top: 64px;
        }
        .dashboard-sidebar {
            top: 64px;
            height: calc(100vh - 64px);
        }
        .dashboard-main {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <!-- Navbar del sitio web -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="z-index: 1030;">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/LOGO.png" alt="Motos Rodriguez" class="navbar-logo" onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                <span style="display: none;">üèçÔ∏è Motos Rodriguez</span>
                <span class="d-none d-md-inline">Motos Rodriguez</span>
            </a>
            <button class="navbar-toggler" type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#mainMenu"
                    aria-controls="mainMenu"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="mainMenu">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item">
                        <a class="nav-link mobile-nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-2"></i>Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mobile-nav-link" asp-controller="Productos" asp-action="Index">
                            <i class="fas fa-box me-2"></i>Productos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mobile-nav-link" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-file-invoice me-2"></i>Factura
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mobile-nav-link" asp-controller="Inventario" asp-action="Index">
                            <i class="fas fa-warehouse me-2"></i>Inventario
                        </a>
                    </li>
                    <li class="nav-item ms-3 mobile-search-item">
                        <form class="d-flex align-items-center mobile-search-form" method="get" asp-controller="Customer" asp-action="Index">
                            <input class="form-control form-control-sm mobile-search-input" type="search" name="search" placeholder="Buscar cliente...">
                            <button class="btn btn-outline-light btn-sm ms-1 mobile-search-btn" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </li>
                    <li class="nav-item ms-3 mobile-cart-item">
                        <a class="nav-link text-warning position-relative mobile-nav-link" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                            <span id="cartBadge" class="badge bg-danger position-absolute top-0 start-100 translate-middle" style="display: none; font-size: 0.7rem; padding: 0.25em 0.5em;">0</span>
                            <span class="d-inline d-lg-none ms-2">Carrito</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        @* Sidebar Navigation *@
        @await Html.PartialAsync("_Sidebar")

        @* Main Content Area *@
        <div class="dashboard-main">
            @* Top Bar *@
            @await Html.PartialAsync("_TopBar")

            @* Page Content *@
            <div class="dashboard-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Cerrar men√∫ m√≥vil al hacer clic en un enlace
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.mobile-nav-link');
            const navbarCollapse = document.getElementById('mainMenu');
            const navbarToggler = document.querySelector('.navbar-toggler');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    // Cerrar el men√∫ si est√° abierto en m√≥vil
                    if (window.innerWidth <= 991 && navbarCollapse && navbarCollapse.classList.contains('show')) {
                        const bsCollapse = new bootstrap.Collapse(navbarCollapse, {
                            toggle: false
                        });
                        bsCollapse.hide();
                        
                        // Actualizar aria-expanded
                        if (navbarToggler) {
                            navbarToggler.setAttribute('aria-expanded', 'false');
                        }
                    }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
