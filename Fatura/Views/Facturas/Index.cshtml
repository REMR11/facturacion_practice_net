@using Fatura.Models.Enums
@using Fatura.Models.Facturacion

@{
    ViewData["Title"] = "Facturas";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="facturas-container">
    <div class="page-header">
        <h1 class="page-title">Facturas</h1>
        <p class="page-subtitle">Gestiona todas tus facturas electr√≥nicas</p>
    </div>

    <div class="filters-section">
        <form method="get" asp-action="Index" class="filters-form">
            <div class="filter-group">
                <input type="text" name="searchTerm" placeholder="Buscar factura..." value="@ViewBag.SearchTerm" class="form-control search-input">
            </div>

            <div class="filter-group">
                <select name="estado" class="form-control">
                    <option value="">Estado - Todos</option>
                    <option value="pagada">Pagada</option>
                    <option value="pendiente">Pendiente</option>
                    <option value="cancelada">Cancelada</option>
                </select>
            </div>

            <div class="filter-group">
                <input type="date" name="fechaInicio" value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" class="form-control">
            </div>

            <div class="filter-group">
                <input type="date" name="fechaFin" value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" class="form-control">
            </div>

            <button type="submit" class="btn btn-filter">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                </svg>
                Filtrar
            </button>

            <a href="@Url.Action("Create", "Facturas")" class="btn btn-new">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Nueva Factura
            </a>
        </form>
    </div>

    <div class="facturas-table">
        <table>
            <thead>
                <tr>
                    <th>Factura</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Monto</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Total > 0)
                {
                    @foreach (var factura in Model ?? new List<Factura>())
                    {
                        <tr>
                            <td><strong>#@factura.Id</strong></td>
                            <td>@factura.ClienteNombre</td>
                            <td>@factura.FechaEmision?.ToString("dd/MM/yyyy")</td>
                            <td>@factura.Total?.ToString("C")</td>
                            <td>
                                <span class="badge badge-@factura.Estado?.ToLower()">
                                    @factura.Estado
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("Details", "Facturas", new { id = factura.Id })" class="btn-action" title="Ver">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("Edit", "Facturas", new { id = factura.Id })" class="btn-action" title="Editar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("Download", "Facturas", new { id = factura.Id })" class="btn-action" title="Descargar">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No hay facturas disponibles</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.Total > ViewBag.PageSize)
    {
        <div class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a href="@Url.Action("Index", new { page = i, searchTerm = ViewBag.SearchTerm, estado = ViewBag.Estado, fechaInicio = ViewBag.FechaInicio, fechaFin = ViewBag.FechaFin })" 
                   class="page-link @(ViewBag.Page == i ? "active" : "")">
                    @i
                </a>
            }
        </div>
    }
</div>

<style>
    .facturas-container {
        max-width: 1400px;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 1.875rem;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        font-size: 0.9375rem;
        color: #6b7280;
        margin: 0;
    }

    .filters-section {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    }

    .filters-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        align-items: flex-end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
    }

    .form-control {
        padding: 0.625rem 0.75rem;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        font-size: 0.875rem;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
    }

    .search-input {
        width: 100%;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border: none;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-filter {
        background-color: #6b7280;
        color: white;
    }

    .btn-filter:hover {
        background-color: #4b5563;
    }

    .btn-new {
        background-color: #10b981;
        color: white;
    }

    .btn-new:hover {
        background-color: #059669;
    }

    .facturas-table {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .facturas-table table {
        width: 100%;
        border-collapse: collapse;
    }

    .facturas-table thead {
        background-color: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
    }

    .facturas-table th {
        padding: 1rem;
        text-align: left;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        color: #6b7280;
        letter-spacing: 0.5px;
    }

    .facturas-table td {
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
        font-size: 0.875rem;
        color: #1f2937;
    }

    .facturas-table tbody tr:hover {
        background-color: #f9fafb;
    }

    .badge {
        display: inline-block;
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge-pagada {
        background-color: #d1fae5;
        color: #065f46;
    }

    .badge-pendiente {
        background-color: #fef3c7;
        color: #92400e;
    }

    .badge-cancelada {
        background-color: #fee2e2;
        color: #991b1b;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 6px;
        background-color: #f3f4f6;
        color: #6b7280;
        transition: all 0.2s;
        text-decoration: none;
    }

    .btn-action:hover {
        background-color: #10b981;
        color: white;
    }

    .text-center {
        text-align: center;
    }

    .text-muted {
        color: #9ca3af;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
    }

    .page-link {
        padding: 0.5rem 0.75rem;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        color: #6b7280;
        text-decoration: none;
        transition: all 0.2s;
    }

    .page-link:hover {
        background-color: #f3f4f6;
        color: #1f2937;
    }

    .page-link.active {
        background-color: #10b981;
        color: white;
        border-color: #10b981;
    }

    @@media (max-width: 768px) {
        .filters-form {
            grid-template-columns: 1fr;
        }

        .facturas-table table {
            font-size: 0.8rem;
        }

        .facturas-table th,
        .facturas-table td {
            padding: 0.75rem 0.5rem;
        }
    }
</style>
