@using Fatura.Models.Enums
@using Fatura.Models.Facturacion
@model Factura

@{
    ViewData["Title"] = "Detalle de Factura";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var moneda = string.IsNullOrWhiteSpace(Model.MonedaSimbolo) ? "S/" : Model.MonedaSimbolo;
}

<div class="factura-page">
    <div class="factura-header-area">
        <div class="header-left">
            <a href="@Url.Action("Index", "Facturas")" class="btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
            </a>
            <div>
                <h1 class="page-title">Factura @Model.NumeroFactura</h1>
                <p class="page-subtitle">Detalle de la factura emitida</p>
            </div>
        </div>
        <div class="header-actions">
            <a class="btn btn-primary" href="@Url.Action("Pdf", "Facturas", new { id = Model.IdFactura })">
                Descargar PDF
            </a>
        </div>
    </div>

    <div class="factura-grid">
        <div class="factura-main">
            <div class="card p-4 mb-4">
                <h3 class="card-title mb-3">Cliente</h3>
                <div class="text-muted">@Model.ClienteNombre</div>
                <div class="text-muted">@Model.ClienteNitDui</div>
                <div class="text-muted">@Model.ClienteDireccion</div>
            </div>

            <div class="card p-4">
                <h3 class="card-title mb-3">Detalle</h3>
                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead>
                            <tr>
                                <th>Producto/Servicio</th>
                                <th class="text-center">Cant.</th>
                                <th class="text-end">Precio Unit.</th>
                                <th class="text-end">Desc.</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.DetalleFacturas != null && Model.DetalleFacturas.Any())
                            {
                                foreach (var item in Model.DetalleFacturas)
                                {
                                    <tr>
                                        <td>@item.NombreProducto</td>
                                        <td class="text-center">@item.Cantidad</td>
                                        <td class="text-end">@($"{moneda}{item.PrecioUnitario:F2}")</td>
                                        <td class="text-end">@($"{moneda}{item.Descuento:F2}")</td>
                                        <td class="text-end">@($"{moneda}{item.Total:F2}")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Sin Ã­tems</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="factura-sidebar">
            <div class="card p-4 sticky-sidebar">
                <h3 class="card-title mb-3">Estado</h3>
                <form asp-action="UpdateEstado" asp-controller="Facturas" asp-route-id="@Model.IdFactura" method="post" class="mb-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                    <div class="mb-2 text-muted">Actualiza el estado para reflejarlo en el dashboard.</div>
                    <div class="d-flex gap-2">
                        <select class="form-select" name="estado">
                            @foreach (EstadoFactura estado in Enum.GetValues(typeof(EstadoFactura)))
                            {
                                <option value="@estado" selected="@(estado == Model.Estado ? "selected" : null)">@estado</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>

                <h3 class="card-title mb-3">Resumen</h3>
                <div class="d-flex justify-content-between mb-2 text-muted">
                    <span>Subtotal</span>
                    <span>@($"{moneda}{Model.SubTotal:F2}")</span>
                </div>
                <div class="d-flex justify-content-between mb-2 text-muted">
                    <span>IGV (18%)</span>
                    <span>@($"{moneda}{Model.Iva:F2}")</span>
                </div>
                <div class="d-flex justify-content-between mb-3 text-muted">
                    <span>Total</span>
                    <span class="fw-bold text-dark">@($"{moneda}{Model.Total:F2}")</span>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.AutoDownload == true)
{
    <script>
        window.addEventListener('load', function () {
            window.location.href = '@Url.Action("Pdf", "Facturas", new { id = Model.IdFactura })';
        });
    </script>
}
