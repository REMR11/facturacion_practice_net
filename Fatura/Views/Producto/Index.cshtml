@model IEnumerable<Fatura.Models.Catalogos.Producto>

@{
    ViewData["Title"] = "Inventario";
}

<h2 class="mb-3">📦 Inventario de Productos</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        ➕ Nuevo Producto
    </a>
</p>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Categoría</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreProducto</td>
                    <td>@item.Codigo</td>

                    <td>
                        @(item.Categoria != null ? item.Categoria.NombreCategoria : "—")
                    </td>

                    <td>
                        @(item.Marca != null ? item.Marca.NombreMarca : "—")
                    </td>

                    <td>$@item.Precio</td>

                    <td>
                        @if (item.Stock <= 0)
                        {
                            <span class="badge bg-danger">Agotado</span>
                        }
                        else if (item.Stock < 5)
                        {
                            <span class="badge bg-warning text-dark">@item.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.Stock</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProducto"
                           class="btn btn-sm btn-primary">Editar</a>

                        <a asp-action="Details" asp-route-id="@item.IdProducto"
                           class="btn btn-sm btn-info text-white">Ver</a>

                        <a asp-action="Delete" asp-route-id="@item.IdProducto"
                           class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">
                    No hay productos en el inventario
                </td>
            </tr>
        }
    </tbody>
</table>

<footer class="bg-dark text-white text-center py-3 mt-4">
    &copy; Taller de Motos Rodríguez
</footer>
