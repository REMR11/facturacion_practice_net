@model IEnumerable<Fatura.Models.Facturacion.Cliente>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<div class="container py-4">

    <!-- HEADER -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">

            <h3 class="fw-bold mb-0">
                <i class="fas fa-users text-primary"></i> Clientes
            </h3>

            <div class="d-flex gap-2">
                <!-- 🔙 VOLVER A FACTURA -->
                <a asp-controller="Dashboard" asp-action="Index"
                   class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Factura
                </a>

                <!-- ➕ NUEVO CLIENTE -->
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-user-plus"></i> Nuevo Cliente
                </a>
            </div>

        </div>
    </div>

    <!-- TABLA -->
    <div class="card shadow-sm">
        <div class="card-body table-responsive">

            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No hay clientes registrados
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nombre</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.Telefono</td>
                                <td>@cliente.Direccion</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@cliente.Id"
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@cliente.Id"
                                       class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
