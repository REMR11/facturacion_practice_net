@model Fatura.Models.Facturacion.Cliente

@{
    ViewData["Title"] = "Detalle de Cliente";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container py-4">
    <!-- HEADER -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h3 class="fw-bold mb-0">
                <i class="fas fa-user text-info"></i> Detalle de Cliente
            </h3>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
            </div>
        </div>
    </div>

    <!-- INFORMACIÓN DEL CLIENTE -->
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Información del Cliente</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Nombre / Razón Social</label>
                            <div class="form-control-plaintext">@Model.Nombre</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">NIT / DUI</label>
                            <div class="form-control-plaintext">@Model.NitDui</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Email</label>
                            <div class="form-control-plaintext">
                                @if (!string.IsNullOrWhiteSpace(Model.Email))
                                {
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Teléfono</label>
                            <div class="form-control-plaintext">
                                @if (!string.IsNullOrWhiteSpace(Model.Telefono))
                                {
                                    <a href="tel:@Model.Telefono">@Model.Telefono</a>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold text-muted">Dirección</label>
                            <div class="form-control-plaintext">
                                @if (!string.IsNullOrWhiteSpace(Model.Direccion))
                                {
                                    @Model.Direccion
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Estado</label>
                            <div>
                                @if (Model.Activo)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times-circle"></i> Inactivo
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ESTADÍSTICAS -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Estadísticas</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">Total de Facturas</label>
                        <div class="h4 text-primary">
                            @if (ViewBag.TotalFacturas != null)
                            {
                                @ViewBag.TotalFacturas
                            }
                            else
                            {
                                <span>0</span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">Total Facturado</label>
                        <div class="h4 text-success">
                            @if (ViewBag.TotalFacturado != null)
                            {
                                @($"${ViewBag.TotalFacturado:F2}")
                            }
                            else
                            {
                                <span>$0.00</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar Cliente
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('¿Está seguro que desea eliminar al cliente @Model.Nombre? Esta acción no se puede deshacer.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash"></i> Eliminar Cliente
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
